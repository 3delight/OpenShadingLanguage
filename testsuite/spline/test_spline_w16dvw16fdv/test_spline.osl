shader test_spline (
	string splinename="spline",
	output vector Fspline1 = 0, 
	output vector DxFspline1 = 0,

        output vector mFspline1 = 0,
        output vector mDxFspline1 = 0
)
{

 


color colknots[16];

for (int i = 0; i < 16; ++i){
         colknots[i] = color(1.0e9, 1.0e9, 1.0e9);
 }


Fspline1 = spline(splinename, time, colknots);
DxFspline1 = Dx(Fspline1);


if(P[0]>0.5){
mFspline1 = spline(splinename, time, colknots);
mDxFspline1 = Dx(mFspline1);
}
}
