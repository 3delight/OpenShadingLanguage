shader test_spline (
        string splinename="spline", 
	output float Fspline1 = 0, 
	output float DxFspline1 = 0,
        output float mFspline1 = 0,
        output float mDxFspline1 = 0)
{
   

   float fltknots[13];
   
   fltknots[ 0] =  0.0 * u;
   fltknots[ 1] =  0.0 * u;
   fltknots[ 2] =  1.0 * u;
   fltknots[ 3] =  1.0 * u;
   fltknots[ 4] =  1.0 * u;
   fltknots[ 5] =  0.5 * u;
   fltknots[ 6] =  0.5 * u;
   fltknots[ 7] =  0.5 * u;
   fltknots[ 8] =  1.0 * u;
   fltknots[ 9] =  1.0 * u;
   fltknots[10] =  1.0 * u;
   fltknots[11] =  0.0 * u;
   fltknots[12] =  0.0 * u;

 Fspline1   = spline(splinename, 0.5, fltknots);
 DxFspline1 = Dx(Fspline1);

if(P[0]>0.5){
  mFspline1   = spline(splinename, 0.5, fltknots);
 mDxFspline1 = Dx(mFspline1);
}


}
