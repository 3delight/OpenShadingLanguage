{
    float val = noise (type, point(u, v, u - v), u);
    val *= 2.0;
    Cout[1] = Dy(val);    
    Cout[2] = Dx(val);    
    
    if (int(P[0]*64)%2 == 0) {
        float val2 = noise (type, point(v, u, v - u), v);
        Cout[1] += Dy(val2) + Dx(val2);        
    }
}
