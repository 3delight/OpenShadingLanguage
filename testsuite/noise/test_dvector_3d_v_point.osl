shader
test_dvector_3d_v_point (string type = "perlin", output color Cout = 0)
{
    vector val = noise (type, point(u, v, u - v));
    val *= 2.0;
    Cout = Dy(val);    
    Cout -= Dx(val);    
    if (int(P[0]*64)%2 == 0) {
        vector val2 = noise (type, point(v, u, v - u));
        Cout += Dy(val2) + Dx(val2);        
    }
}
