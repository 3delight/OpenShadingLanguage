shader
test_dvector_2d_v_float_v_float (string type = "perlin", output color Cout = 0)
{
    vector val = noise (type, u, v);    
    val *= 2.0;
    Cout = Dy(val);    
    Cout -= Dx(val);    
    
    if (int(P[0]*64)%2 == 0) {
        vector val2 = noise (type, v, u);
        Cout += Dy(val2) + Dx(val2);
    }
}
