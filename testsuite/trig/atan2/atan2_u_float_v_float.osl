shader
atan2_u_float_v_float (output color res = 0,
               output color res_m = 0)
{
    float a = 1.0/(2*raytype("camera"));
    float b = 1.0/(3*raytype("camera"));
    float c = P[0];
    float r = atan2(a,c);
    res = color (r);

    float fr = 0.0;
    if (int(P[0]*200)%2){

        c = P[1];
        fr = atan2(b,c);

    }
    res_m = color(fr);
}