shader
test_smoothstep_v_float_v_float_v_float (output color Cout = 0)
{
    float  edge0 = 32.0*P[0];
    float  edge1 = 32.0 + 64.0*P[0];
    
    float x = 128*P[0];
    float x2 = -64.0 + (128*P[1]);

    float st = smoothstep(edge0, edge1, x);
    if (int(P[0]*64)%2==0) {
        st = smoothstep(edge0, edge1, x2);
    }
    
    Cout = color(st,st,st);
}
